            //        $(this).click(function () {
            //            $('#type_1').show();
            //            $('#type_2').show();
            //            if (!$('#type_2').is(':visible')) {
            //                $('#features_frm').data('bootstrapValidator').disableSubmitButtons(false);
            //            }
            //        });
            //    } else {
            //        $(this).click(function () {
            //            $('#type_1').hide();
            //            $('#type_2').show();
            //            if (!$('#type_2').is(':visible')) {
            //                $('#features_frm').data('bootstrapValidator').disableSubmitButtons(false);
            //            }
            //        });
            //    }
            //});
        });
    </script>
}