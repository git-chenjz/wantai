@{
    ViewBag.Title = "万泰后台管理-权限字段";
}
@section style{}
<div class="navbar-fixed-top row">
    <div class="col-lg-12">
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Content("~/admin/home/main")">主页</a>
            </li>
            <li>
                <a href="javacript:history.go(-1);">权限字段</a>
            </li>
            <li>
                <strong>新增</strong>
            </li>
        </ol>
    </div>
</div>
<div class="animated fadeInRight m-t-lg">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>新增</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link" href="javascript:void();"><i class="fa fa-chevron-up"></i></a>
                        <a href="javascript:void();" onclick="javacript:window.location.reload();"><i class="fa fa-refresh"></i></a>
                    </div>
                </div>
                <div class="ibox-content">
                    <form class="form-horizontal m-t" method="post" id="purviewfield_frm" action="@Url.Content("~/admin/purview/purviewfieldsave")">
                        <input name="objID" value="@ViewBag.ObjID" type="hidden" />
                        <input name="type" value="@ViewBag.Type" type="hidden" />
                        <div class="form-group">
                            <label class="col-sm-3 control-label">名称：</label>
                            <div class="col-sm-8">
                                <input id="name" name="name" class="form-control" type="text" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">编号：</label>
                            <div class="col-sm-8">
                                <input id="code" name="code" class="form-control" type="text" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-8 col-sm-offset-3">
                                <button class="btn btn-primary" type="submit"><i class="fa fa-save"></i>&nbsp;保存</button>
                                <button class="btn btn-primary" type="button" onclick="javacript:history.go(-1);"><i class="fa fa-circle-o-notch"></i>&nbsp;取消</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script type="text/javascript">
        $(function () {
            $('#purviewfield_frm').bootstrapValidator({
                message: '表单数据验证无效',
                feedbackIcons: {
                    valid: 'glyphicon glyphicon-ok',
                    invalid: 'glyphicon glyphicon-remove',
                    validating: 'glyphicon glyphicon-refresh'
                },
                fields: {
                    name: {
                        validators: {
                            notEmpty: { message: '请填写功能名称' },
                            stringLength: { max: 25, message: '功能名称的长度在1-25个字' }
                        }
                    },
                    code: {
                        validators: { notEmpty: { message: '请填写编号，将做为UI显示过滤KEY' } }
                    }
                },
                submitHandler: function (validator, form, submitButton) {
                    $.post(form.attr('action'), form.serialize(), function (result) {
                        top.bootbox.alert(result.msg, function () { location.href = '@Url.Content("~/admin/purview/purviewfield/" + ViewBag.ObjID+"?type="+ViewBag.Type)'; });
                    }, 'json');
                }
            })
        });
    </script>
}