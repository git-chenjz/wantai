@{
    ViewBag.Title = "万泰后台管理-我的资料";
}
@model AdminDto
<div class="navbar-fixed-top row">
    <div class="col-lg-12">
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Content("~/admin/home/main")">主页</a>
            </li>
            <li>
                <strong>我的资料</strong>
            </li>
        </ol>
    </div>
</div>
<div class="animated fadeInRight m-t-lg">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>我的资料</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link" href="javascript:void();"><i class="fa fa-chevron-up"></i></a>
                        <a href="javascript:void();" onclick="javacript:window.location.reload();"><i class="fa fa-refresh"></i></a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="form-horizontal m-t">
                        <div class="form-group">
                            <label class="col-sm-3 control-label">名称：</label>
                            <div class="col-sm-8">
                                <p class="form-control-static">@Model.UserName</p>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">状态：</label>
                            <div class="col-sm-8">
                                <p class="form-control-static">@(Model.Status == 0 ? "正常" : "关闭")</p>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">注册时间：</label>
                            <div class="col-sm-8">
                                <p class="form-control-static">@Model.RegTimeDto</p>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">登录时间：</label>
                            <div class="col-sm-8">
                                <p class="form-control-static">@Model.LoginTime</p>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">登录次数：</label>
                            <div class="col-sm-8">
                                <p class="form-control-static">@Model.Login</p>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">登录IP：</label>
                            <div class="col-sm-8">
                                <p class="form-control-static">@Model.LoginIP</p>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label">备注：</label>
                            <div class="col-sm-8">
                                <p class="form-control-static">@Model.Remark</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
