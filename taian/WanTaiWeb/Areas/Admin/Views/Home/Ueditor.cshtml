<script type="text/javascript">
       var eidtor;
       $(function () {
           (function initRichTextEditor() {
               eidtor = UE.getEditor('des');
               eidtor.addListener('contentChange', function () {
                   $('#contentError').hide();
               });
           })();
       });
</script>
