@{
    ViewBag.Title = "消息提醒";
}

@model PagedResult<WechatTemplate>

@section style{
    <link href="~/Content/css/reset.css" rel="stylesheet" />
    <link href="~/Content/css/content.css" rel="stylesheet" />
    <style>
        .ed-wrap {
            margin-bottom: 4.55rem;
        }

        .al-ongkend {
            float: right;
            width: 84%;
            padding-bottom: 7rem;
        }

            .al-ongkend li {
                float: left;
                width: 100%;
                height: 4.13rem;
                margin-bottom: 0.8rem;
            }

        .ong-link {
            float: left;
            width: 4%;
            height: 0.45rem;
            margin: 0.75rem 0 0 -2.1%;
            -webkit-border-radius: 50%;
            -moz-border-radius: 50%;
            border-radius: 50%;
            background-color: #ff9619;
        }

        .ong-content {
            float: left;
            width: 80%;
            height: 4.1rem;
            margin-left: 6%;
            border: 2px solid #dadce0;
            -webkit-border-radius: 0.1rem;
            -moz-border-radius: 0.1rem;
            border-radius: 0.1rem;
        }

            .ong-content i {
                float: left;
                width: 5%;
                height: 0.5rem;
                margin: 0.7rem 0 0 -5%;
                background-image: url(/images/demo30.png);
                -webkit-background-size: 100% 100%;
                background-size: 100% 100%;
            }

            .ong-content span {
                overflow: hidden;
                float: left;
                width: 94%;
                height: 1.52rem;
                margin: 0.5rem 0 0.7rem 3%;
                color: #1d1a1a;
                font-size: 0.6rem;
            }

            .ong-content a strong {
                float: left;
                width: 92%;
                height: 0.7rem;
                padding-left: 2%;
                margin-left: 3%;
                color: #ff9619;
                font-size: 0.6rem;
            }

        .ong-demo {
            float: left;
            width: 11%;
            height: 4.13rem;
        }

            .ong-demo span {
                float: left;
                width: 90%;
                height: 0.6rem;
                margin: 0.7rem 0 1.4rem 0;
                padding-left: 10%;
                color: #000;
                font-size: 0.45rem;
            }

            .ong-demo a strong {
                float: left;
                width: 80%;
                height: 1rem;
                margin-left: 20%;
                background-image: url(/images/demo09.png);
                -webkit-background-size: 100% 100%;
                background-size: 100% 100%;
            }
    </style>
}

<div class="ed-main clearfix">
    <div class="ed-content clearfix">
        <ul class="al-ongkend clearfix">
            <!--右边内容循环列表-->
            @foreach (var template in Model.Result)
            {
                <li>
                    <span class="ed-left"></span>
                    <span class="ed-wrap">1/12</span>
                    <span class="ong-link"></span>
                    <p class="ong-content">
                        <i></i>
                        <span>尊敬的会员，您的戊肝疫苗第二期接种时间为2016-02-20日。</span>
                    </p>
                    <p class="ong-demo">
                        <span>20:18</span>
                        <a href="" title="">
                            <strong></strong>
                        </a>
                    </p>
                </li>
            }            
        </ul>
    </div>
</div>			

@section scripts{
    <script src="~/Content/js/flexible.js"></script>
}




