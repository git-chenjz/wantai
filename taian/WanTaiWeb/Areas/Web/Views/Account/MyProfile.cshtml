@{
    ViewBag.Title = "我的资料";
}

@model Users

@section style{
    <link href="~/Content/css/reset.css" rel="stylesheet" />
    <link href="~/Content/css/content.css" rel="stylesheet" />
    <style>
        html, body {
            padding: 0;
            margin: 0;
            background-color: #efefef;
        }

        .pro-main {
            float: left;
            width: 100%;
            padding-top: 1.38rem;
        }

        .pro-list {
            float: left;
            width: 94%;
            height: 1.8rem;
            margin: 0 0 0.45rem 3%;
        }

            .pro-list span {
                float: left;
                width: 22%;
                height: 1.8rem;
                color: #1d1a1a;
                font-size: 0.7rem;
                line-height: 1.8rem;
                text-align: center;
            }

            .pro-list input {
                float: left;
                width: 74%;
                height: 1.7rem;
                color: #1d1a1a;
                padding-left: 3%;
                border: 1px solid #d3d3d3;
                background-color: #fff;
                font-size: 0.65rem;
                line-height: 1.7rem;
                text-align: left;
            }
    </style>
}

<div class="pro-main clearfix">
    <form method="post">
        <div class="pro-list">
            <span>姓名</span>
            <input type="text" placeholder="姓名" name="userName" id="userName" value="@Model.UserName">
        </div>
        <div class="pro-list">
            <span>联系电话</span>
            <input type="text" placeholder="联系电话" name="tel" id="tel" value="@Model.Tel">
        </div>
        <div class="pro-list">
            <span>邮箱地址</span>
            <input type="text" placeholder="邮箱地址" name="Email" id="email" value="@Model.Email">
        </div>
        @if (ViewBag.Message != null)
        {
            <span class="land-host" style="text-align:center;color:red;">@ViewBag.Message</span>  
        }
        <a href="" title="">
            <input type="submit" value="保存" class="reg-bottom" id="submit">
        </a>
    </form>
</div>
<div class="bottom un-deable">
    <span class="bottom-rac">地址：厦门市海沧区新园路130号</span>
    <p class="bottom-text">
        <span>电话：+86-592-6536555</span>
        <span>传真：+86-592-6536567</span>
    </p>
</div>

@section scripts{
    <script src="~/Content/js/flexible.js"></script>
    <script type="text/javascript">
        function Check()
        {
            var username = $("#userName").val();
            var tel = $("#tel").val();
            var email = $("#email").val();
            var partten = /^1[3,5,8]\d{9}$/;

            if (!IsEmpty(username)) {
                toastr.warning('请输入姓名');
                return false;
            }

            if (!IsEmpty(tel)) {
                toastr.warning('请输入联系电话');
                return false;
            }

            if (!IsEmpty(email)) {
                toastr.warning('请输入邮箱地址');
                return false;
            }

            if (!IsEmail(email)) {
                toastr.warning('请输入正确邮箱地址');
                return false;
            }

            if (partten.test(tel) == false) {
                toastr.warning('请输入正确的手机号码');
                return false;
            }
        }

        $(function () {
            $("#submit").click(function () {
                return Check();
            });
        });
    </script>
}

