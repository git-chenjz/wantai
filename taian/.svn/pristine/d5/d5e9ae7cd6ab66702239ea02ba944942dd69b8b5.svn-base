@model WechatUserProfile
@{
    ViewBag.Title = "我的资料";
    Layout = "~/Areas/Web/Views/Shared/_LayoutWeUI.cshtml";
}

<div class="weui_cells weui_cells_form">
    @using(Html.BeginForm())
    { 
    <div class="weui_cell">
        <div class="weui_cell_hd"><label class="weui_label">姓名</label></div>
        <div class="weui_cell_bd weui_cell_primary">
            <input class="weui_input" type="text" name="Name" placeholder="请输入姓名" value="@Model.Name">
        </div>
    </div>
    <div class="weui_cell">
        <div class="weui_cell_hd"><label class="weui_label">手机号</label></div>
        <div class="weui_cell_bd weui_cell_primary">
            <input class="weui_input" type="text" name="Tel" placeholder="请输入手机号码" value="@Model.Tel">
        </div>
    </div>
    <div class="weui_cell">
        <div class="weui_cell_hd"><label class="weui_label">邮箱</label></div>
        <div class="weui_cell_bd weui_cell_primary">
            <input class="weui_input" type="email" name="Email" placeholder="请输入邮箱" value="@Model.Email">
        </div>
    </div>
    <div class="weui_btn_area">
        <button class="weui_btn weui_btn_primary" type="submit" id="showTooltips">保存</button>
        <a class="weui_btn weui_btn_plain_primary" href="@Url.Action("Index")" id="showTooltips">返回</a>
    </div>
    }
</div>
