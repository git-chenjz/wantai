@{
    ViewBag.Title = "主页";
    var index = 0;
    var dot = 0;
    var video = (Video)ViewBag.Video;
}

@model IEnumerable<AD>

@section style{
    <link href="~/Content/css/reset.css" rel="stylesheet" />
    <link href="~/Content/css/details.css" rel="stylesheet" />
    <link href="~/Content/css/content.css" rel="stylesheet" />
    <style>
        .wt-main dl {
            position: relative;
        }

            .wt-main dl .link {
                position: absolute;
                left: 0;
                top: 0;
                width: 100%;
                height: 100%;
            }
    </style>
}

<div class="wt-top">
    <img src="" alt="" title="">
</div>
<div class="slide">
    <ul class="slide-wrapper">
        @foreach (var ad in Model)
        {
            if (index == 0)
            {
        <li class="show">
            <a href="" title="">
                <img src="@ad.ImgPath" alt="" title="">
            </a>
        </li>
            }
            else
            {
        <li>
            <a href="" title="">
                <img src="@ad.ImgPath" alt="" title="">
            </a>
        </li>
            }
            index++;
        }
    </ul>
    <div class="slide-box">
        <div class="slide-wrap">
            <ul class="slide-nav">
                @foreach (var ad in Model)
                {
                    if (dot == 0)
                    {
                <li class="current"></li>
                    }
                    else
                    {
                <li></li>
                    }
                }
            </ul>
        </div>
    </div>
</div>
